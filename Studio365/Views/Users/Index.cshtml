
@{
    ViewBag.Title = @ViewBag.Title;
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="box-body">
                <form id="formUsers" name="formUsers">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>User Name</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    <input type="text" class="form-control" id="txtUserName" placeholder="User Name" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>User Mobile</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-mobile"></i>
                                    </div>
                                    <input type="text" class="form-control" min="10" max="10" id="txtUserMobile" placeholder="User Mobile Number" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Join Date</label>
                                <input type="date" class="form-control pull-right" id="dateJoinDate">
                                <!-- /.input group -->
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Salary</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-rupee"></i>
                                    </div>
                                    <input type="number" class="form-control" id="txtUserSalary" placeholder="User Salary" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Password</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user-secret"></i>
                                    </div>
                                    <input type="password" class="form-control" id="txtUserPassword" placeholder="Password" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Gender</label>
                                <select id="ddGender" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="9" tabindex="-1" aria-hidden="true">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>User Role</label>
                                <select id="ddUserRole" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="9" tabindex="-1" aria-hidden="true">
                                    <option value="Admin">Admin</option>
                                    <option value="User">User</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>User Image</label>
                                <input type="file" id="fileUserImage" class="form-control" />
                            </div>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success" id="btnAddCustomer"><i class="fa fa-check"></i> Submit</button>
                        <button type="reset" class="btn btn-danger"><i class="fa fa-close"></i> Cancel</button>
                    </div>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

        <div class="box box-info">
            <div class="box-body">
                <table class="table table-sm table-bordered table-hover table-responsive" id="tblUsersDetails">
                    <thead>
                        <tr>
                            <th>Sno</th>
                            <th>User Name</th>
                            <th>User Mobile</th>
                            <th>Gender</th>
                            <th>Role</th>
                            <th>Date of Join</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <th>Sno</th>
                            <th>User Name</th>
                            <th>User Mobile</th>
                            <th>Gender</th>
                            <th>Role</th>
                            <th>Date of Join</th>
                            <th>Options</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/PageScripts/Users.js"></script>
