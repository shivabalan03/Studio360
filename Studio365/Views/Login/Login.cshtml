
@{
    ViewBag.Title = "Login";
    Layout = "../Shared/LoginLayout.cshtml";
}
<style>
    .bg {
        background-image: url(../Content/LoginWall.jpg);
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
    }
</style>

<body class="hold-transition login-page bg">
    <br /><br />
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Studio</b> 360</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form action="#" method="post">
                <div class="form-group has-feedback">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-comment-o"></i>
                        </div>
                        <input type="text" id="txtUserName" class="form-control" placeholder="User Mobile">
                    </div>
                </div>
                <div class="form-group has-feedback">
                    
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-user-secret"></i>
                        </div>
                        <input type="password" id="txtPassword" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        @*<div class="checkbox icheck">
                            <label>
                                <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div> Remember Me
                            </label>
                        </div>*@
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="button" class="btn btn-primary btn-block btn-flat" id="btnSignIN">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-box-body -->
    </div>

</body>

<script src="~/Scripts/PageScripts/Login.js"></script>