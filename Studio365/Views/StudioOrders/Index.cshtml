
@{
    ViewBag.Title = "Studio Order";
}

<div class="modal fade" id="modal-AddManual" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Add Manual Product</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body">
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <div class="form-group row">
                                        <div class="col-lg-4">
                                            <label>Product</label>
                                            <input type="text" class="form-control" id="txtProduct" placeholder="Product Name" required><br />
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Sub Product</label>
                                            <input type="text" class="form-control" id="txtSubProduct" placeholder="Sub Product Name"><br />
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Quantity</label>
                                            <input type="text" class="form-control" id="txtQuantity" placeholder="Quantity" value="1"><br />
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Price</label>
                                            <input type="text" class="form-control" id="txtPrice" placeholder="Price"><br />
                                        </div>
                                        <div class="col-lg-4">
                                            <label>GST</label>
                                            <input type="text" class="form-control" id="txtGST" placeholder="GST"><br />
                                        </div>
                                        <div class="col-lg-4">
                                            <label>Total</label>
                                            <input type="text" class="form-control" id="txtTotal" placeholder="Total Amount" disabled><br />
                                        </div>


                                    </div>
                                    <button type="button" class="btn btn-success" id="btnAddManualProduct"><i class="fa fa-check"></i> Submit</button>
                                </div>
                            </div>
                        </div>
                        <!-- /.box -->
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="col-md-3">
            <!-- USERS LIST -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Product Details</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="btn-group" id="btnGroupProduct">

                    </div>
                    <!-- /.users-list -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">

                </div>
                <!-- /.box-footer -->
            </div>
            <!--/.box -->
        </div>
        <div class="col-lg-9">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Sub Product Details</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="btn-group" data-toggle="buttons" id="btnGroupSubProducts">
                        @*<label class="btn btn-sm btn-info btnP" id="1">
                            <input type="radio" name="options" id="options 1" autocomplete="off" /> S1
                        </label>

                        <label class="btn btn-sm btn-info btnP" id="1">
                            <input type="radio" name="options" id="options 1" autocomplete="off" /> S1
                        </label>*@
                    </div>
                    <!-- /.users-list -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">
                    <div class="col-lg-2">
                        <input type="number" id="txtQty" placeholder="Quantity" class="form-control" value="1" />
                    </div>
                    <div class="col-lg-3">
                        <input type="text" id="txtCustomerMobile" placeholder="Customer Mobile" class="form-control" />
                    </div>
                    <div class="col-lg-2">
                        <input type="text" id="txtCustomerName" placeholder="Customer Name" class="form-control" />
                    </div>
                    <div class="col-lg-2">
                        <input type="number" id="txtDiscount" placeholder="Discount Amount" class="form-control" />
                    </div>
                    <div class="col-lg-2">
                        <input type="number" id="txtAdvance" placeholder="Advance Amount" class="form-control" />
                    </div>
                    <div class="col-lg-1">
                        <button type="button" class="btn btn-primary pull-right" id="btnAddItem"><i class="fa fa-plus"></i> Add</button>
                    </div>
                </div>
                <!-- /.box-footer -->
            </div>
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Items Details</h3>

                    <div class="box-tools pull-right">
                        <h4><label class="text-primary" id="lblBillNo"></label></h4>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-sm table-bordered table-hover table-responsive" id="tblorderDetails">
                        <thead>
                            <tr>
                                <th>Sno</th>
                                <th>Product</th>
                                <th>Sub Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>GST</th>
                                <th>Total</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                    <!-- /.users-list -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">
                    <button type="button" id="btnManual" class="btn btn-primary pull-left" data-toggle="modal" data-target="#modal-AddManual"> <i class="fa fa-plus"></i>  Manual</button>
                    <button type="button" id="btnPrint" class="btn btn-primary pull-right"> <i class="fa fa-print"></i>  Print</button>
                </div>
                <!-- /.box-footer -->
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/PageScripts/StudioOrders.js"></script>

