
@{
    ViewBag.Title = @ViewBag.Title;
}

<div class="col-lg-12">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Sub Product Details</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body row">
            <div class="col-lg-3">
                <label>Product</label>
                <select id="ddProduct" name="ProductTypes" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="9" tabindex="-1" aria-hidden="true">
                    <option value="Select">Select</option>
                </select>
            </div>
            <div class="col-lg-3">
                <label>Sub Product</label>
                <select id="ddSubProduct" name="SubProductTypes" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="9" tabindex="-1" aria-hidden="true">
                    <option value="Select">Select</option>
                </select>
            </div>
            <div class="col-lg-2">
                <label>Quantity</label>
                <input type="number" id="txtQuantity" placeholder="Quanity" class="form-control">
            </div>
            <div class="col-lg-4" style="margin-top:25px">
                <button type="button" class="btn btn-success"><i class="fa fa-plus"></i> Add</button>
            </div>
        </div>
        <!-- /.box-footer -->
    </div>
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Items Details</h3>

            <div class="box-tools pull-right">
                <h4><label class="text-primary" id="lblBillNo">B-4</label></h4>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-sm table-bordered table-hover table-responsive" id="tblorderDetails">
                <thead>
                    <tr>
                        <th>Sno</th>
                        <th>Product</th>
                        <th>Sub Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>GST</th>
                        <th>Total</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <!-- /.users-list -->
        </div>
        <!-- /.box-body -->
        <div class="box-footer text-center">
            <button type="button" id="btnManual" class="btn btn-primary pull-left" data-toggle="modal" data-target="#modal-AddManual"> <i class="fa fa-plus"></i>  Manual</button>
            <button type="button" class="btn btn-primary pull-left" style="margin-left:5px;"><i class="fa fa-plus"></i> Package</button>
            <button type="button" id="btnPrint" class="btn btn-primary pull-right"> <i class="fa fa-print"></i>  Print</button>
        </div>
        <!-- /.box-footer -->
    </div>

    <div class="modal fade" id="modal-AddManual" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title">Add Manual Product</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box-body">
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <div class="form-group row">
                                            <div class="col-lg-4">
                                                <label>Product</label>
                                                <input type="text" class="form-control" id="txtProduct" placeholder="Product Name" required><br />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Sub Product</label>
                                                <input type="text" class="form-control" id="txtSubProduct" placeholder="Sub Product Name"><br />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Quantity</label>
                                                <input type="text" class="form-control" id="txtQuantity" placeholder="Quantity" value="1"><br />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Price</label>
                                                <input type="text" class="form-control" id="txtPrice" placeholder="Price"><br />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>GST</label>
                                                <input type="text" class="form-control" id="txtGST" placeholder="GST"><br />
                                            </div>
                                            <div class="col-lg-4">
                                                <label>Total</label>
                                                <input type="text" class="form-control" id="txtTotal" placeholder="Total Amount" disabled><br />
                                            </div>


                                        </div>
                                        <button type="button" class="btn btn-success" id="btnAddManualProduct"><i class="fa fa-check"></i> Submit</button>
                                    </div>
                                </div>
                            </div>
                            <!-- /.box -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</div>

